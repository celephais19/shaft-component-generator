    <Grid x:Key="UpDownButtons" x:Shared="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.03*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="RepeatButton">
                <Setter Property="Background" Value="#00ABFF"></Setter>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ContentControl}, Path=IsEnabled}" 
                                 Value="False">
                        <Setter Property="Background" Value="#8c8c8c"></Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <RepeatButton Grid.Row="0" FocusVisualStyle="{x:Null}"
                      Template="{DynamicResource ButtonUpTemplate}" Interval="95">
            <i:Interaction.Behaviors>
                <behaviors:IncrementDecrementValueBehavior />
            </i:Interaction.Behaviors>
        </RepeatButton>
        <Grid Grid.Row="1" Background="White" />
        <RepeatButton Grid.Row="2" FocusVisualStyle="{x:Null}"
                      behaviors:IncrementDecrementValueBehavior.Decrement="True"
                      Template="{DynamicResource ButtonDownTemplate}" Interval="95">
            <i:Interaction.Behaviors>
                <behaviors:IncrementDecrementValueBehavior Decrement="True" />
            </i:Interaction.Behaviors>
        </RepeatButton>
    </Grid>
    <ControlTemplate x:Key="ButtonUpTemplate">
        <Grid Width="{TemplateBinding Width}"
              Height="{TemplateBinding Height}"
              Background="{TemplateBinding Background}">
            <Path Data="M 0 2 L 3.5 -4 L 7 2 Z" Fill="White" HorizontalAlignment="Center"
                  VerticalAlignment="Center" />
        </Grid>
    </ControlTemplate>
    <ControlTemplate x:Key="ButtonDownTemplate">
        <Grid Width="{TemplateBinding Width}"
              Height="{TemplateBinding Height}"
              Background="{TemplateBinding Background}">
            <Path Data="M 0 -2 L 3.5 4 L 7 -2 Z" Fill="White" HorizontalAlignment="Center"
                  VerticalAlignment="Center" />
        </Grid>
    </ControlTemplate>
