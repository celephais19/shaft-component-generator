                                    <ItemContainerTemplate.Resources>
                                        <Style TargetType="Image">
                                            <Setter Property="Width" Value="30" />
                                            <Setter Property="Height" Value="20" />
                                            <Setter Property="Stretch" Value="Fill" />
                                        </Style>
                                    </ItemContainerTemplate.Resources>
                                    <DockPanel VerticalAlignment="Center" LastChildFill="True">
                                        <ContentControl Content="{DynamicResource KeywayImage}" />
                                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Right"
                                                   VerticalAlignment="Center" Margin="2,0,0,0" FontSize="12" />
                                    </DockPanel>
                                </ItemContainerTemplate>
                            </templateSelectors:ComboBoxItemTemplateSelector.SelectedTemplate>
                            <templateSelectors:ComboBoxItemTemplateSelector.DropDownTemplate>
                                <ItemContainerTemplate>
                                    <StackPanel Orientation="Vertical" Margin="5">
                                        <ContentControl Content="{DynamicResource KeywayImage}" />
                                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   TextAlignment="Center" />
                                    </StackPanel>
                                </ItemContainerTemplate>
                            </templateSelectors:ComboBoxItemTemplateSelector.DropDownTemplate>
                        </templateSelectors:ComboBoxItemTemplateSelector>
                    </ComboBox.ItemTemplateSelector>
                    <ComboBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel
                                Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType=ComboBox}}"
                                ItemWidth="85" ItemHeight="Auto" />
                        </ItemsPanelTemplate>
                    </ComboBox.ItemsPanel>
                </ComboBox>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Preview" BorderBrush="DeepSkyBlue" Margin="0,5,0,0"
                      BorderThickness="1.5" Template="{DynamicResource GroupBoxCustomControlTemplate}">
                <Image Source="../../Assets/PreviewImages/plainKeywayGrooveImg.png" HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </GroupBox>
        </Grid>

        <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,0,11,9">
            <CheckBox IsChecked="{Binding CustomParameters}" HorizontalAlignment="Left" VerticalAlignment="Center"
                      Content="Custom" Margin="5.5,0,0,0"
                      FontSize="14" VerticalContentAlignment="Center" />
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Content="OK" Margin="0,0,10,0" FontSize="12" Width="65" Height="20"
                        Style="{DynamicResource BlueButton}"
                        Template="{DynamicResource ButtonBaseControlTemplate1}" IsDefault="True"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding ElementName=ThisWindow}" />
                <Button Content="Cancel" FontSize="12" Width="65" Height="20" Command="{Binding CancelCommand}"
                        Style="{DynamicResource BlueButton}"
                        Template="{DynamicResource ButtonBaseControlTemplate1}" IsCancel="True"
                        CommandParameter="{Binding ElementName=ThisWindow}" />
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>